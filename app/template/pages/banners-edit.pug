extends ../main.layout.pug

block title
  | Редактирование банера


block content
  include ../inc/head
  include ../inc/sidebar-left.pug
  section#page-content.page__article
    .header-content
      h2 Редактирование банера
      .breadcrumb-wrapper.hidden-xs
        ol.breadcrumb
          li
            i.fa.fa-home
            a(href='/') Главная
            i.fa.fa-angle-right
          li.active Редактирование банера


    .body-content
      .row
        .col-md-8
          .panel.panel-success.shadow
            .panel-heading
              .pull-left
                h3.panel-title Параметры страницы
              .pull-right
                button.btn.btn-sm(data-action='collapse', data-container='body', data-toggle='tooltip', data-placement='top', data-title='Collapse', data-original-title='', title='')
                  i.fa.fa-angle-up 
              .clearfix

            .panel-body.padding-15
              .form-group
                label.control-label Активный 
                .switchs
                  input.switch(type='checkbox',  name='switch', checked='', data-on-text='ON', data-off-text='OFF', data-on-color='teal')           

              .form-group
                label.control-label Заголовок
                input(type="text" class="form-control" placeholder="Введите заголовок")
              .form-group
                label.control-label Описание
                textarea.form-control(rows='4')
              .form-group
                label.control-label Адрес (url)
                input.form-control(type='text' placeholder="Введите адрес страницы")
                    
        .col-md-4
          .panel.panel-success.shadow
            .panel-heading
              .pull-left
                h3.panel-title Дополнительно
              .pull-right
                button.btn.btn-sm(data-action='collapse', data-container='body', data-toggle='tooltip', data-placement='top', data-title='Collapse', data-original-title='', title='')
                  i.fa.fa-angle-up 
              .clearfix
            
            .panel-body.padding-15
              .form-group
                label.control-label Изображение статьи
                .fileinput.fileinput-new(data-provides='fileinput')
                  .fileinput-new.thumbnail(style='width: 200px; height: 150px;')
                    img(data-src='holder.js/100%x100%/text:Картинка категории', alt='Картинка категории [100%x100%]', style='height: 100%; width: 100%; display: block;', src='data:image/svg+xml;base64,', data-holder-rendered='true')
                  .fileinput-preview.fileinput-exists.thumbnail(data-trigger='fileinput', style='max-width: 200px; max-height: 150px;')
                  div
                    span.btn.btn-success.btn-file
                      span.fileinput-new Выбрать 
                      span.fileinput-exists Изменить
                      input(type='file', name='...')
                    a.btn.btn-danger.fileinput-exists(href='#', data-dismiss='fileinput') Удалить

    include ../inc/footer

    button.filter__btn(title="Сохранить" type="submit")      
      i.fa.fa-save